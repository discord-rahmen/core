{
  "compilerOptions": {
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "target": "esnext",
    "module": "commonjs",
    "outDir": "dist",
    "rootDir": "src",
    "strict": false,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "importsNotUsedAsValues": "error",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "declaration": true,
  },
  "exclude": ["node_modules", "dist", ".idea"],
  "include": ["src"],
}